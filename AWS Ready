def send_discord_embed(message, title="Trading Bot", color=3447003, fields=None):
    """Send rich embed to Discord"""
    if not DISCORD_WEBHOOK_URL:
        return
    
    embed = {
        "title": title,
        "description": message,
        "color": color,
        "timestamp": datetime.utcnow().isoformat(),
        "footer": {"text": "Enhanced EMA Bot - AWS EC2"}
    }
    
    if fields:
        embed["fields"] = fields
    
    try:
        requests.post(DISCORD_WEBHOOK_URL, json={"embeds": [embed]}, timeout=10)
    except Exception as e:
        logger.warning(f"Discord send failed: {e}")


def bot_start_alert(bot):
    """Alert when bot starts"""
    try:
        account = bot.api.get_account()
        portfolio = float(account.portfolio_value)
        buying_power = float(account.buying_power)
        
        # Get server info
        import socket
        hostname = socket.gethostname()
        
        fields = [
            {"name": "üñ•Ô∏è Server", "value": hostname, "inline": True},
            {"name": "üí∞ Portfolio", "value": f"${portfolio:,.2f}", "inline": True},
            {"name": "üíµ Buying Power", "value": f"${buying_power:,.2f}", "inline": True},
            {"name": "üéØ Threshold", "value": str(bot.signal_threshold), "inline": True},
            {"name": "üîí Stop Loss", "value": f"{bot.stop_loss*100:.1f}%", "inline": True},
            {"name": "üéØ Take Profit 1", "value": f"{bot.take_profit_1*100:.1f}%", "inline": True},
            {"name": "üéØ Take Profit 2", "value": f"{bot.take_profit_2*100:.1f}%", "inline": True},
            {"name": "üìä Symbols", "value": ", ".join(bot.symbols), "inline": False}
        ]
        
        mode = "PAPER" if "paper" in ALPACA_BASE_URL else "LIVE"
        
        send_discord_embed(
            f"‚úÖ Trading bot started on AWS EC2\n**Mode: {mode} Trading**",
            title="ü§ñ Bot Started - AWS",
            color=3066993,
            fields=fields
        )
    except Exception as e:
        logger.error(f"Start alert error: {e}")


